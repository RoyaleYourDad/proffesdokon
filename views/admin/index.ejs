<%- include('../partials/header') %>
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white py-12">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <!-- Header -->
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-8 flex items-center">
      <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      Admin Dashboard
    </h1>

    <!-- Navigation -->
    <div class="bg-white shadow rounded-2xl p-6 mb-8">
      <div class="flex flex-wrap gap-4">
        <a href="/admin/add"
          class="bg-blue-600 text-white py-3 px-6 rounded-lg text-sm hover:bg-blue-700 flex items-center transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Add Product
        </a>
        <a href="/admin/stock"
          class="bg-blue-600 text-white py-3 px-6 rounded-lg text-sm hover:bg-blue-700 flex items-center transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-3-3m0 0l-3 3m3-3v12" />
          </svg>
          Manage Stock
        </a>
        <a href="/admin/stock/history"
          class="bg-blue-600 text-white py-3 px-6 rounded-lg text-sm hover:bg-blue-700 flex items-center transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Stock History
        </a>
        <a href="/admin/admins"
          class="bg-blue-600 text-white py-3 px-6 rounded-lg text-sm hover:bg-blue-700 flex items-center transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          Manage Admins
        </a>
      </div>
    </div>

    <!-- Products Section -->
    <div class="bg-white shadow rounded-2xl p-6 mb-8">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold text-gray-700">Products</h2>
        <a href="/admin/add"
          class="bg-blue-600 text-white py-2 px-4 rounded-lg text-sm hover:bg-blue-700 flex items-center">
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Add Product
        </a>
      </div>
      <% if (products.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% products.forEach(product => { %>
            <div class="border rounded-xl p-4 bg-gray-50 hover:shadow-md transition-shadow">
              <div class="flex items-start gap-4">
                <!-- Thumbnail -->
                <div class="w-24 h-24 flex-shrink-0">
                  <% if (product.thumbnail && product.thumbnail.url) { %>
                    <img src="<%= product.thumbnail.url %>" alt="<%= product.name %>"
                      class="w-full h-full object-cover rounded-lg" />
                  <% } else { %>
                    <div class="w-full h-full bg-gray-200 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  <% } %>
                </div>
                <!-- Product Info -->
                <div class="flex-1">
                  <h3 class="text-md font-medium text-gray-800"><%= product.name %></h3>
                  <p class="text-sm text-gray-500">Category: <%= product.category || 'N/A' %></p>
                  <p class="text-sm text-gray-500">Stock: <%= product.stock || 0 %></p>
                  <% if (product.discountPrice && product.discountPrice <= product.price && (!product.discountExpiry || new Date(product.discountExpiry) > new Date())) { %>
                    <p class="text-sm text-gray-600 flex items-center mt-1">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="text-orange-500 line-through">$<%= product.price.toFixed(2) %></span>
                      <span class="text-orange-500 font-bold ml-2">$<%= product.discountPrice.toFixed(2) %></span>
                    </p>
                    <p class="text-xs text-gray-500 flex items-center mt-1">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      Until <%= new Date(product.discountExpiry).toLocaleDateString() %>
                    </p>
                  <% } else { %>
                    <p class="text-sm text-gray-600 flex items-center mt-1">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="text-gray-800">$<%= product.price.toFixed(2) %></span>
                    </p>
                  <% } %>
                </div>
              </div>
              <!-- Actions -->
              <div class="flex justify-end gap-2 mt-4">
                <a href="/admin/edit/<%= product.id %>" class="text-blue-600 hover:text-blue-700">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15.414a1 1 0 01-1.414 0l-3-3a1 1 0 011.414-1.414L9.586 13.586a2 2 0 002.828 0l4-4z" />
                  </svg>
                </a>
                <form action="/admin/delete/<%= product.id %>" method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this product?');">
                  <button type="submit" class="text-red-500 hover:text-red-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4M9 7v12m6-12v12M10 3h4" />
                    </svg>
                  </button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-500 text-center py-6">No products found. Add one to get started!</p>
      <% } %>
    </div>

    <!-- Reviews Overview -->
    <div class="bg-white shadow rounded-2xl p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold text-gray-700">Recent Reviews</h2>
        <a href="/admin/reviews"
          class="text-blue-600 hover:text-blue-700 flex items-center text-sm">
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          View All Reviews
        </a>
      </div>
      <% if (products.some(p => p.reviews && p.reviews.length > 0)) { %>
        <div class="space-y-4">
          <% products.forEach(product => { %>
            <% if (product.reviews && product.reviews.length > 0) { %>
              <% product.reviews.slice(0, 3).forEach(review => { %>
                <div class="border-b pb-4">
                  <div class="flex justify-between items-center mb-2">
                    <div>
                      <p class="text-sm font-medium text-gray-800">
                        <%= users.find(u => u.id === review.userId)?.displayName || 'Anonymous' %>
                        on <a href="/product/<%= product.id %>" class="text-blue-600 hover:underline"><%= product.name %></a>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= new Date(review.timestamp).toLocaleDateString() %>
                        <% if (review.edited) { %>
                          <span class="text-xs text-gray-400">(Edited)</span>
                        <% } %>
                      </p>
                      <div class="flex mt-1">
                        <% for (let i = 1; i <= 5; i++) { %>
                          <svg class="w-4 h-4 <%= i <= review.rating ? 'text-yellow-400' : 'text-gray-300' %>"
                            fill="currentColor" viewBox="0 0 20 20">
                            <path
                              d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3 .921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784 .57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81 .588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                        <% } %>
                      </div>
                    </div>
                    <a href="/admin/edit/<%= product.id %>#reviews" class="text-blue-600 hover:text-blue-700">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15.414a1 1 0 01-1.414 0l-3-3a1 1 0 011.414-1.414L9.586 13.586a2 2 0 002.828 0l4-4z" />
                      </svg>
                    </a>
                  </div>
                  <p class="text-sm text-gray-600"><%= review.comment %></p>
                </div>
              <% }) %>
            <% } %>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-500 text-center py-6">No reviews yet.</p>
      <% } %>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>