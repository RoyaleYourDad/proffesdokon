<%- include('partials/header') %>
<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="text-center">
    <h1 class="text-3xl font-bold text-red-600 mb-4">
      <%= message || 'Something Went Wrong' %>
    </h1>
    <p class="text-gray-600 mb-6">
      <% if (message.includes('not found')) { %>
        The page or resource you’re looking for doesn’t exist.
      <% } else { %>
        An unexpected error occurred. Please try again later.
      <% } %>
    </p>
    <a href="/" class="inline-block bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors">
      Back to Home
    </a>
  </div>
</div>
<%- include('partials/footer') %>