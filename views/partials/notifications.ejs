<% if (user.notifications && user.notifications.length > 0) { %>
    <div class="p-4">
      <h3 class="text-sm font-medium text-gray-700 mb-2">Notifications</h3>
      <div class="space-y-2">
        <% user.notifications.slice(0, 10).forEach((notification, index) => { %>
          <div class="flex items-center justify-between bg-gray-50 p-2 rounded-lg <%= notification.read ? 'opacity-75' : '' %>">
            <div class="flex-1">
              <p class="text-sm <%= notification.read ? 'text-gray-500' : 'text-gray-800' %>">
                <% if (notification.type === 'low_stock') { %>
                  <span class="font-medium">Low Stock:</span> <%= notification.message %>
                <% } else if (notification.type === 'uncategorized') { %>
                  <span class="font-medium">Uncategorized:</span> <%= notification.message %>
                <% } else if (notification.type === 'expiring_discount') { %>
                  <span class="font-medium">Expiring Discount:</span> <%= notification.message %>
                <% } else if (notification.type === 'pending_review') { %>
                  <span class="font-medium">Pending Review:</span> <%= notification.message %>
                <% } %>
              </p>
              <p class="text-xs text-gray-400">
                <%= new Date(notification.timestamp).toLocaleString() %>
              </p>
            </div>
            <div class="flex gap-2">
              <% if (!notification.read) { %>
                <form action="/admin/notification/read/<%= index %>" method="POST">
                  <button type="submit" class="text-blue-600 hover:text-blue-700">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </button>
                </form>
              <% } %>
              <a href="<%= notification.link %>" class="text-blue-600 hover:text-blue-700">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        <% }) %>
      </div>
      <% if (user.notifications.length > 10) { %>
        <p class="text-sm text-gray-500 text-center mt-2">
          <%= user.notifications.length - 10 %> more notifications not shown.
        </p>
      <% } %>
    </div>
  <% } else { %>
    <div class="p-4 text-center">
      <p class="text-sm text-gray-500">No notifications yet.</p>
    </div>
  <% } %>