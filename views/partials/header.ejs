<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ProfesDokon</title>
    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <!-- Favicon -->
    <link rel="icon" type="image/jpeg" href="/images/icon.png" />
    <link rel="apple-touch-icon" href="/images/icon.png" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class="bg-gray-100 flex flex-col min-h-screen font-sans">
    <nav class="bg-white shadow sticky top-0 z-20">
      <div class="container mx-auto px-4 sm:px-6 py-4 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center text-2xl font-bold text-gray-900 whitespace-nowrap">
          <svg class="w-8 h-8 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          ProfesDokon
        </a>

        <!-- Hamburger Menu Button (Mobile) -->
        <button id="menu-toggle" class="md:hidden focus:outline-none focus:ring-2 focus:ring-blue-500 rounded" aria-label="Toggle menu">
          <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Navigation (Desktop) -->
        <div class="hidden md:flex items-center gap-6">
          <!-- Search Bar -->
          <form action="/" method="GET" class="relative inline-block">
            <input
              type="text"
              name="search"
              placeholder="Search products..."
              class="w-64 h-10 px-3 bg-gray-50 border border-gray-200 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
              value="<%= typeof query !== 'undefined' && query.search ? query.search : '' %>"
            />
            <button type="submit" class="absolute inset-y-0 right-2 flex items-center text-gray-500 hover:text-gray-700">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
          </form>
          <!-- Cart and User Links -->
          <a href="/cart" class="text-gray-700 hover:text-gray-900 flex items-center text-base whitespace-nowrap">
            <svg class="w-5 h-5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Cart
          </a>
          <% if (user) { %>
            <span class="text-base text-gray-700 whitespace-nowrap truncate max-w-[150px]"><%= user.displayName %></span>
            <a href="/auth/logout" class="text-gray-700 hover:text-gray-900 flex items-center text-base whitespace-nowrap">
              <svg class="w-5 h-5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </a>
            <% if (user.isAdmin) { %>
              <a href="/admin" class="bg-blue-600 text-white py-1.5 px-4 rounded-lg text-base hover:bg-blue-700 flex items-center whitespace-nowrap">
                <svg class="w-5 h-5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Admin Controls
              </a>
            <% } %>
          <% } else { %>
            <a href="/auth/login" class="text-gray-700 hover:text-gray-900 flex items-center text-base whitespace-nowrap">
              <svg class="w-5 h-5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              Login
            </a>
          <% } %>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md border-t border-gray-200">
        <div class="flex flex-col gap-4 p-4">
          <!-- Search Bar (Mobile) -->
          <form action="/" method="GET" class="relative inline-block">
            <input
              type="text"
              name="search"
              placeholder="Search products..."
              class="w-full h-12 px-4 bg-gray-50 border border-gray-200 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
              value="<%= typeof query !== 'undefined' && query.search ? query.search : '' %>"
            />
            <button type="submit" class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
          </form>
          <!-- Cart and User Links (Mobile) -->
          <a href="/cart" class="text-gray-700 hover:text-gray-900 flex items-center text-base whitespace-nowrap">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Cart
          </a>
          <% if (user) { %>
            <span class="text-base text-gray-700 whitespace-nowrap truncate max-w-[200px]"><%= user.displayName %></span>
            <a href="/auth/logout" class="text-gray-700 hover:text-gray-900 flex items-center text-base whitespace-nowrap">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l-4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </a>
            <% if (user.isAdmin) { %>
              <a href="/admin" class="bg-blue-600 text-white py-2 px-4 rounded-lg text-base hover:bg-blue-700 flex items-center whitespace-nowrap">
                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Admin Controls
              </a>
            <% } %>
          <% } else { %>
            <a href="/auth/login" class="text-gray-700 hover:text-gray-900 flex items-center text-base whitespace-nowrap">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              Login
            </a>
          <% } %>
        </div>
      </div>
    </nav>

    <script>
      // Toggle mobile menu
      const menuToggle = document.getElementById("menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      menuToggle?.addEventListener("click", () => {
        const isOpen = mobileMenu.classList.toggle("hidden");
        mobileMenu.classList.toggle("animate-slide-in", !isOpen);
        menuToggle.setAttribute("aria-expanded", !isOpen);
      });

      // Close mobile menu on outside click
      document.addEventListener("click", (e) => {
        if (!mobileMenu.contains(e.target) && !menuToggle.contains(e.target) && !mobileMenu.classList.contains("hidden")) {
          mobileMenu.classList.add("hidden");
          mobileMenu.classList.remove("animate-slide-in");
          menuToggle.setAttribute("aria-expanded", "false");
        }
      });
    </script>

    <style>
      /* Animation for mobile menu */
      .animate-slide-in {
        animation: slideIn 0.3s ease-in-out;
      }
      @keyframes slideIn {
        from { transform: translateY(-10px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
      }
      /* Touch-friendly inputs */
      input[type="text"], button {
        min-height: 40px;
        touch-action: manipulation;
      }
      /* Ensure form is relative */
      form.relative {
        position: relative !important;
      }
      /* Button alignment */
      button.absolute.inset-y-0 {
        display: flex;
        align-items: center;
        height: 100%;
      }
      /* Responsive breakpoints */
      @media (max-width: 768px) {
        .container {
          padding-left: 1rem;
          padding-right: 1rem;
        }
        input[type="text"] {
          font-size: clamp(1rem, 4vw, 1.1rem);
        }
        .text-base {
          font-size: clamp(1rem, 4vw, 1.125rem);
        }
        svg {
          width: clamp(1.5rem, 5vw, 1.75rem);
          height: clamp(1.5rem, 5vw, 1.75rem);
        }
        nav {
          -webkit-overflow-scrolling: touch;
        }
      }
      @media (max-width: 640px) {
        body {
          font-size: 16px;
        }
        svg {
          width: 1.5rem;
          height: 1.5rem;
        }
      }
    </style