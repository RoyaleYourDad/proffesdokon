import os
import json

def scan_project(directory, exclude_dirs={"node_modules"}):
    project_data = {}
    total_files = 0

    if not os.path.exists(directory):
        print(f"Directory '{directory}' does not exist.")
        return {}

    for root, dirs, files in os.walk(directory):
        dirs[:] = [d for d in dirs if d not in exclude_dirs]

        for file in files:
            file_path = os.path.join(root, file)
            try:
                with open(file_path, "r", encoding="utf-8") as f:
                    content = f.read()
                relative_path = os.path.relpath(file_path, directory)
                project_data[relative_path] = content
                total_files += 1
            except Exception as e:
                print(f"Skipping {file_path} due to error: {e}")

    print(f"Total files scanned: {total_files}")
    return project_data


if __name__ == "__main__":
    folder = r"C:\\Users\\user\Downloads\\im_done_AF\\"
    result = scan_project(folder)

    output_path = "project_dump.json"
    with open(output_path, "w", encoding="utf-8") as out:
        json.dump(result, out, ensure_ascii=False, indent=2)

    print(f"\nDumped {len(result)} files into {output_path}")
